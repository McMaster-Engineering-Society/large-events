# Enable global workspace linking
link-workspace-packages=true
shared-workspace-lockfile=true

# Tell pnpm to not recursively install in submodules by default
# This allows teams to have independent lock files when needed
recursive-install=false

# Private Registry Configuration for @large-event packages
# Fallback to GitHub Packages when workspace packages are not available
@large-event:registry=https://npm.pkg.github.com
//npm.pkg.github.com/:_authToken=${LARGE_EVENTS_GITHUB_TOKEN}

# Alternative: Use local Verdaccio for development (uncomment to use)
# @large-event:registry=http://localhost:4873
